<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_15sdp"
    android:layout_height="@dimen/_90sdp"
  >

    <LinearLayout

        android:orientation="vertical"
        android:background="@drawable/dialogueboxborder"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        tools:ignore="MissingConstaints,MissingConstraints">

        <RelativeLayout
        android:gravity="center"
         android:layout_gravity="center"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <TextView

                android:layout_centerHorizontal="true"
                android:id="@+id/txtstd"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/roundcorner"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/darkblue"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/delete_img"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close">

            </ImageView>

</RelativeLayout>
        <TextView
            android:id="@+id/txtboys"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_gravity="center"
            android:text="Boys:20"
            android:gravity="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtgirls"
            android:layout_gravity="center"
            android:text="Girls:20"
            android:gravity="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txttotal"
            android:layout_gravity="center"
            android:textStyle   ="bold"
            android:text="Total:40"
            android:gravity="center"
            android:textColor="@color/darkblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>