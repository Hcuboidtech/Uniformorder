<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:alpha="17"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_165sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/editborder"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Edit Order"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <View
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@color/cardview_dark_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"/>


            <RelativeLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:text="Boys"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/edtboys1"
                    android:layout_width="@dimen/_80sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_3sdp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt1"
                    android:background="@drawable/dialogueboxborder"
                    android:inputType="number" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:text="Girls"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/edtgirls1"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt2"
                    android:background="@drawable/dialogueboxborder"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:padding="@dimen/_3sdp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtcancle"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonborder"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:text="Cancle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/btnregisternow"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/txtcancle"
                    android:background="@drawable/cornerdarkblue"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />


            </RelativeLayout>



        </LinearLayout>




    </RelativeLayout>



</LinearLayout>