<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5sdp"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:id="@+id/lnMain1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <RelativeLayout
                android:id="@+id/rlprofile"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="2dp"
                    android:src="@drawable/logo"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/img_profile"
                    android:text="Shah Dipti"
                    android:textAllCaps="false"
                    android:textColor="@color/darkblue"
                    android:textSize="@dimen/_15sdp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/logout"
                    android:visibility="invisible">

                </ImageView>

                </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/quickorder"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/mainborder"
                    android:layout_margin="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_border_color_24px"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:text="Quick Order"
                        android:textColor="@color/darkblue"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/orderll"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/mainborder"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_format_list_numbered_24px"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:id="@+id/rlorder"
                        android:text=" Order"
                        android:textColor="@color/darkblue"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>



            </LinearLayout>

            <LinearLayout

                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/addstd"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/mainborder"
                    android:layout_margin="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconawesomeschool"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:id="@+id/rlschool"
                        android:text="School"
                        android:gravity="center"
                        android:textColor="@color/darkblue"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addpattern"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/mainborder"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconmapclothingstore"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:id="@+id/rlpattern"
                        android:text=" Patterns"
                        android:gravity="center"
                        android:textColor="@color/darkblue"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/addmember"
                    android:layout_weight="0.95"
                    android:orientation="vertical"
                    android:background="@drawable/mainborder"
                    android:layout_margin="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconawesomeuserplus"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:id="@+id/rlmemberr"
                        android:text="Members"
                        android:gravity="center"
                        android:textColor="@color/darkblue"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

<!--                <LinearLayout-->
<!--                    android:layout_margin="@dimen/_10sdp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:orientation="vertical"-->
<!--                    android:background="@drawable/mainborder"-->
<!--                    android:padding="@dimen/_10sdp"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content">-->

<!--                    <ImageView-->
<!--                        android:src="@drawable/iccontentpaste24px"-->
<!--                        android:layout_width="@dimen/_40sdp"-->
<!--                        android:layout_height="@dimen/_30sdp"/>-->

<!--                    <TextView-->
<!--                        android:text=" Reports"-->
<!--                        android:gravity="center"-->
<!--                        android:textColor="@color/darkblue"-->
<!--                        android:textStyle="bold"-->
<!--                        android:layout_marginTop="@dimen/_10sdp"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"/>-->



<!--                </LinearLayout>-->


            </LinearLayout>



        </LinearLayout>


        <LinearLayout
             android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:id="@+id/txttitle"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="Today's Update" />
        <TextView
            android:id="@+id/textrevorder"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="Receved Orders" />

        <TextView
            android:id="@+id/textrevorderforboys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:text="Order for Boys"
            android:textColor="@color/darkblue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textrevorderforgirls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:text="Order for Girls"
            android:textColor="@color/darkblue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textrevpayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:text="Receveid Payment"
            android:textColor="@color/darkblue"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textrmainpayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:text="Remain Payment"
            android:textColor="@color/darkblue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textdeliveredorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:text="Delivered Order"
            android:textColor="@color/darkblue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textboyscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:text="Delivered Boy's Dress count"
            android:textColor="@color/darkblue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textgirlscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:text="Delivered Girl's Dress count"
            android:textColor="@color/darkblue"
            android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/prossesbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>